# ==========================================
# AI Diary App - Environment Variables
# ==========================================
# Copy this file to .env and fill in your values

# ------------------------------------------
# Database Configuration
# ------------------------------------------
DATABASE_URL=postgresql://username:password@localhost:5432/ai_diary_db
REDIS_URL=redis://localhost:6379

# ------------------------------------------
# Authentication
# ------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
REFRESH_SECRET=your-refresh-token-secret-change-this
SESSION_SECRET=your-session-secret-change-this

# ------------------------------------------
# Weights & Biases (W&B)
# ------------------------------------------
WANDB_API_KEY=your-wandb-api-key
WANDB_PROJECT=ai-diary-app
WANDB_ENTITY=your-team-or-username

# ------------------------------------------
# GitHub Integration
# ------------------------------------------
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_REPO=your-username/AI_diary_app
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# ------------------------------------------
# AI/ML APIs
# ------------------------------------------
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-org-id-optional

# Claude (Anthropic)
ANTHROPIC_API_KEY=your-claude-api-key

# Choose your primary AI provider (openai or anthropic)
AI_PROVIDER=openai
AI_MODEL=gpt-4

# ------------------------------------------
# Vector Database (for RAG)
# ------------------------------------------
# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-environment
PINECONE_INDEX_NAME=ai-diary-vectors

# OR Qdrant (alternative)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key-if-using-cloud

# ------------------------------------------
# Storage
# ------------------------------------------
# AWS S3 (for image storage - optional)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-diary-images

# OR Local Storage
STORAGE_TYPE=local
UPLOAD_DIR=./uploads

# ------------------------------------------
# Email Service (for notifications)
# ------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# ------------------------------------------
# Push Notifications (PWA)
# ------------------------------------------
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=mailto:your-email@example.com

# ------------------------------------------
# Application Settings
# ------------------------------------------
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# ------------------------------------------
# Monitoring & Logging
# ------------------------------------------
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-optional

# ------------------------------------------
# Rate Limiting
# ------------------------------------------
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ------------------------------------------
# Deployment (Production)
# ------------------------------------------
VERCEL_TOKEN=your-vercel-token
RAILWAY_TOKEN=your-railway-token