{
  "name": "ai_diary_app",
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "next dev --port 3009",
    "dev:demo": "cross-env NEXT_PUBLIC_DEMO_MODE=true next dev --port 3009",
    "dev:full": "next dev --port 3009",
    "build": "prisma generate && next build",
    "build:demo": "prisma generate && cross-env NEXT_PUBLIC_DEMO_MODE=true next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "lint": "next lint",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "deploy:demo": "npm run build:demo && vercel --prod",
    "test:local": "echo 'ローカル環境（API使用）でテスト中...' && npm run dev:full",
    "test:demo": "echo 'デモ環境（API不使用）でテスト中...' && npm run dev:demo"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "AI Diary App - AIが支援する次世代の日記アプリケーション",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.15.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@wandb/sdk": "^0.5.1",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "d3-cloud": "^1.2.7",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "jsonwebtoken": "^9.0.2",
    "kuromoji": "^0.1.2",
    "lucide-react": "^0.542.0",
    "next": "^15.5.2",
    "openai": "^5.19.1",
    "prisma": "^6.15.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "reactflow": "^11.11.4",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
